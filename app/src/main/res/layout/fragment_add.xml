<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.AddFragment">

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edt_style"
        android:hint="@string/mahsulot_nomi"
        android:padding="12dp"
        android:textColor="#463E65"
        android:textColorHint="#847BA6"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edtPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/edt_style"
        android:hint="@string/mahsulot_narxi"
        android:padding="12dp"
        android:textColor="#463E65"
        android:textColorHint="#847BA6"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/edtDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edt_style"
        android:drawableEnd="@drawable/ic_date"
        android:drawableTint="#463E65"
        android:hint="@string/olib_kelingan_sana"
        android:padding="12dp"
        android:textColor="#463E65"
        android:textColorHint="#847BA6"
        android:textSize="22sp"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#D6B4FF"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/do_konga_joylash"
            android:textColor="#463E65"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
</LinearLayout>